// Compiler options for TypeScript
{
  "compilerOptions": {
    // Enables project references for incremental builds
    "composite": true,
    // Specifies the path to store build info for incremental compilation
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    // Skips type checking of declaration files for faster builds
    "skipLibCheck": true,
    // Sets the module code generation to the ECMAScript 'next' version
    "module": "ESNext",
    // Uses module resolution designed for bundlers like Webpack or Rollup
    "moduleResolution": "bundler",
    // Allows default imports from modules with no default export
    "allowSyntheticDefaultImports": true,
    // Enables all strict type-checking options
    "strict": true,
    // Prevents the compiler from generating output files
    "noEmit": true,
    // Includes type definitions for Node.js
    "types": [
      "node"
    ]
  },
  // Files to include in the compilation
  "include": [
    "vite.config.ts"
  ]
}